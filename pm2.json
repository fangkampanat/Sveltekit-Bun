{
  "apps": [
    {
      "name": "app",
      "script": "bun",
      "args": "./build/index.js",
      "interpreter": "none",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3333,
        "DATABASE_URL": "local.db",
        "AUTH_SECRET": "your-secret-key-min-32-characters-here"
      }
    }
  ]
}
